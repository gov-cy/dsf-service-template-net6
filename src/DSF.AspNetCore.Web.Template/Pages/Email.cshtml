@page "/email-selection/{review:bool?}"

@using DSF.AspNetCore.Web.Template.Data.Models

@model EmailModel

@{
   ViewBag.PreviousUrl= Model.BackLink;
   ViewData["Title"] = Localizer["email-selection.title"];
}
<div style="@Model.DisplaySummary" class="govcy-alert-error govcy-br-5 govcy-br-danger govcy-p-3">
    <h2>@Localizer["common.error_message"]</h2>
    <p class="govcy-mb-0">
        @Html.Raw(Model.ErrorsDesc)
    </p>
</div>

<form method="post" novalidate class="govcy-form">

    <fieldset class="govcy-fieldset">
        <legend class="govcy-legend"><h1>@Localizer["email-selection.title"]</h1></legend>

        <div class="@((Model.EmailSelection.Length>0)? "govcy-form-control  govcy-form-control-error" : "govcy-form-control")">
            @if (Model.EmailSelection.Length > 0)
            {
                <span class="govcy-visually-hidden-error">@Localizer["common.error_alert"]</span>
                <span class="govcy-input-error-msg">@Model.EmailSelection</span>
            }
            <label class="govcy-radio">
                <strong>@Model.EmailSel.Email</strong>
                <input class="govcy-radio-input" type="radio" value="1" id="crbEmail" name="crbEmail" @(Model.CrbEmail == "1" ? "checked" : "")>
                <span class="govcy-radio-checked"></span>
                <span class="govcy-hint govcy-mt-2">@Localizer["email-selection.yes_hint"]</span>
            </label>
            <label class="govcy-radio">
                @Localizer["email-selection.no_label"]
                <input class="govcy-radio-input" type="radio" value="2" name="crbEmail" @(Model.CrbEmail == "2" ? "checked" : "")>
                <span class="govcy-radio-checked"></span>
            </label>
        </div>
    </fieldset>
    <button type="submit" class="govcy-btn-primary">@Localizer["common.button_next"]</button>
</form>
 

  