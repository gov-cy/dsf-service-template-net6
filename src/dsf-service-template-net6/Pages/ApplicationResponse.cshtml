@page "/application-response/"
@using dsf_service_template_net6.Resources
@inject IResourceViewlocalizer Localizer
@model dsf_service_template_net6.Pages.ApplicationResponseModel

@{
    Layout = "_LayoutNoBackLink";
    ViewBag.PreviousUrl="/";
    ViewData["Title"] = Localizer["application-response.header_title"];
}
<div class="govcy-col-9 govcy-mb-4">
    <div class="govcy-alert-completed-notification govcy-px-0 govcy-mb-4">
        <div class="govcy-alert-completed-notification-body govcy-bg-success">

            @if (true)
            {
                <h1>@Localizer["application-response.header_title"] <br /> <span style="font-size:medium">@Localizer["application-response.header_ref"] @Model._applResponse</span> </h1>
            }
            else
            {
                <h1>@Localizer["application-response.header_title"] </h1>
            }
        </div>
    </div>
</div>